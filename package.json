{
  "name": "tutor-latvia",
  "version": "1.0.0",
  "description": "Interactive AI tutor for Latvian school students",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "node --watch server.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server.js",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "@google/genai": "^1.42.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
